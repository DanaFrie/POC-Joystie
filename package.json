{
  "name": "poc-joystie",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:sync": "powershell -ExecutionPolicy Bypass -File ./scripts/sync-secrets-to-env.ps1 && npm run dev",
    "sync-secrets": "powershell -ExecutionPolicy Bypass -File ./scripts/sync-secrets-to-env.ps1",
    "delete-secrets": "powershell -ExecutionPolicy Bypass -File ./scripts/delete-apphosting-secrets.ps1",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "firebase:use:intgr": "firebase use intgr",
    "firebase:use:prod": "firebase use prod",
    "deploy:rules:intgr": "firebase use intgr && firebase deploy --only firestore:rules",
    "deploy:rules:prod": "firebase use prod && firebase deploy --only firestore:rules --config firebase.prod.json",
    "deploy:all:intgr": "firebase use intgr && firebase deploy",
    "deploy:all:prod": "firebase use prod && firebase deploy --config firebase.prod.json",
    "secrets:apphosting:prod": "powershell -ExecutionPolicy Bypass -File ./scripts/set-apphosting-secrets-prod.ps1",
    "deploy:cloud-run:prod": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-cloud-run-prod.ps1",
    "deploy:cloud-run:intgr": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-cloud-run-intgr.ps1",
    "deploy:functions:prod": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-functions-prod.ps1",
    "deploy:functions:intgr": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-functions-intgr.ps1",
    "sync:branch": "powershell -ExecutionPolicy Bypass -File ./scripts/sync-branch-config.ps1",
    "sync:branch:bash": "bash ./scripts/sync-branch-config.sh",
    "prebuild": "bash ./scripts/sync-branch-config.sh || echo 'Skipping branch sync (not Linux or bash not available)'",
    "deploy:apphosting": "npm run sync:branch && firebase apphosting:backends:deploy",
    "deploy:apphosting:prod": "npm run sync:branch && firebase use prod && firebase apphosting:backends:deploy",
    "deploy:apphosting:intgr": "npm run sync:branch && firebase use intgr && firebase apphosting:backends:deploy"},
  "dependencies": {
    "firebase": "^9.23.0",
    "next": "13.4.19",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "20.2.5",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "10.4.14",
    "dotenv": "^17.2.3",
    "postcss": "8.4.23",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4"
  }
}
